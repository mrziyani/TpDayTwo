@page "/post-details/{PostId:int}"
@layout MainLayout
@using Blazored.LocalStorage
@using Front.Helpers
@using Front.Models
@using Front.Service
@inject IPostService PostService
@inject ICommentService CommentService
@inject NavigationManager NavigationManager
@inject ILocalStorageService localStorage

<h3>Post Details</h3>

@if (loading)
{
    <p><em>Loading...</em></p>
}
else if (!string.IsNullOrEmpty(errorMessage))
{
    <div class="alert alert-danger">@errorMessage</div>
}
else if (post != null)
{
    <div class="card mb-4">
        <div class="card-body">
            <h4>@post.Title</h4>
            <p>@post.Content</p>
            <small class="text-muted">Posted on @post.CreatedAt.ToString("g")</small>
        </div>
    </div>

    <h5>Comments</h5>
    @if (comments != null && comments.Any())
    {
        foreach (var comment in comments)
        {
            <div class="border rounded p-2 mb-2">
                <p>@comment.Content</p>
                <small class="text-muted">@comment.CreatedAt.ToString("g")</small>
            </div>
        }
    }
    else
    {
        <p>No comments available for this post.</p>
    }

    <div class="mt-4">
        <h5>Add a Comment</h5>
        <input type="text" class="form-control mb-2" @bind="newCommentContent" placeholder="Write your comment here..." />
        <button class="btn btn-primary" @onclick="SubmitComment">Submit</button>
    </div>
}

@code {
    [Parameter] public int PostId { get; set; }
    private Post post;
    private List<Comment> comments;
    private string newCommentContent;
    private bool loading = true;
    private string errorMessage;
    private int currentUserId;

    protected override async Task OnInitializedAsync()
    {
        var token = await localStorage.GetItemAsync<string>("authToken");

        if (string.IsNullOrEmpty(token))
        {
            NavigationManager.NavigateTo("/errorlogin");
            return;
        }

        currentUserId = (int)TokenHelper.GetUserIdFromToken(token); // déjà bien fait

        try
        {
            post = await PostService.GetPostById(PostId);
            comments = await CommentService.GetCommentsByPostIdAsync(PostId);
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load data: {ex.Message}";
        }
        finally
        {
            loading = false;
        }
    }


    private async Task SubmitComment()
    {
        if (!string.IsNullOrWhiteSpace(newCommentContent))
        {
            var newComment = new CreateComment
                {
                    Content = newCommentContent,
                    CreatedAt = DateTime.Now,
                    PostId = PostId,
                    UserId = currentUserId // Replace with actual user ID from auth/token
                };

            var success = await CommentService.CreateCommentAsync(newComment);
            if (success)
            {
                comments = await CommentService.GetCommentsByPostIdAsync(PostId);
                newCommentContent = string.Empty;
            }
            else
            {
                errorMessage = "Failed to submit comment.";
            }
        }
    }
}
